{
  "name": "gricob/imap",
  "description": "IMAP client for PHP",
  "type": "library",
  "keywords": ["imap"],
  "homepage": "https://github.com/gricob/imap",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "ext-iconv": "*",
    "psr/log": "^1.0|^2.0|^3.0"
  },
  "autoload": {
    "psr-4": {
      "Gricob\\IMAP\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.10"
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse -l 9 src",
    "test": "vendor/bin/phpunit"
  }
}
